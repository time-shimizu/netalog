<% provide(:title, @user.name) %>
<div clas="row">
  <div class="col-md-4 col-sm-5 col-xs-12 sideBar">
    <div class="user-side">
      <%= render 'user_show' %>
    </div>
  </div>
  <% if @microposts.present? %>
    <div class="col-md-8 col-sm-7 col-xs-12">
      <%= render @microposts %>
      <%= paginate @microposts %>
    </div>
  <% else %>
    <div class="non">
      <h3>まだ投稿がありません</h3>
    </div>
  <% end %>
</div>
